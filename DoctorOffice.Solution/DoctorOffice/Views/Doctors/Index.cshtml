@{
  Layout = "_Layout";
  ViewBag.Title = "All Doctors";
}

@using DoctorOffice.Models;
@model List<DoctorOffice.Models.Doctor>;

<div class="doctorsIndex">
  <h1><strong>List of Doctors</strong></h1>
  @if (Model.Count == 0)
  {
    <p>There are currently no doctors in data. Click below to add new doctor.</p>
  }

  @foreach (Doctor doctor in Model)
  {
    <p>@Html.ActionLink($"{doctor.FirstName} {doctor.LastName}", "Details", new { id = doctor.DoctorId })</p>
  }
</div>

<p>@Html.ActionLink("Add a new doctor", "Create")</p>
<p>@Html.ActionLink("Search for Doctors", "Search")</p>
<p>@Html.ActionLink("Go Home", "Index", "Home")</p>