@{
  Layout = "_Layout";
  ViewBag.Title = "Search Results Doctors";
}

@using DoctorOffice.Models;
@model List<DoctorOffice.Models.Doctor>

<div class="doctorSearchResult">
  <h2><strong>Search Results of Doctors</strong></h2>

  <div id="doctorSearchLists">
    @if (Model.Count == 0)
    {
      <h3>No doctors have been found</h3>
    }
    @foreach (Doctor doctor in Model)
    {
      <p>@Html.ActionLink($"{doctor.LastName}", "Details", new {id = doctor.DoctorId})</p>
    }
  </div>
  <div class="exceptionError">
    @if (TempData.ContainsKey("ErrorMessage"))
    {
    <h4 class="exceptionError">@TempData["ErrorMessage"]</h4>
    }
  </div>

  <p>@Html.ActionLink("Go Home", "Index", "Home")</p>

</div>