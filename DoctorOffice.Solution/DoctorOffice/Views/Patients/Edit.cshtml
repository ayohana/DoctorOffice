@{
  Layout ="_Layout";
  ViewBag.Title ="Eidt";
}

<div class="patientEdit">
<h1><strong>Edit</strong></h1>

<h4>Edit this patient : @Html.DisplayFor(model => model.LastName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.PatientId)

  @Html.Label("Select Doctor")
  @Html.DropDownList("DoctorId")

  @Html.Label(model => model.FirstName)
  @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @type="text", @class="form-control" } })

  @Html.Label(model => model.LastName)
  @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @type="text", @class="form-control" } })

  @Html.Label("Date of Birth")
  @Html.TextBoxFor(model => model.DOB, "{0:MM-dd-yyyy}")

  @Html.Label(model => model.PhoneNumber)
  @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @type="text", @class="form-control" } })

  @Html.Label(model => model.Allergies)
  @Html.EditorFor(model => model.Allergies, new { htmlAttributes = new { @type="text", @class="form-control" } })

  @Html.Label(model => model.MedicalHistory)
  @Html.EditorFor(model => model.MedicalHistory, new { htmlAttributes = new { @type="text", @class="form-control" } })

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back To All Patients", "Index")</p>

</div>